<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50dp">
    <TextView
        
        android:text="First, let's find your account"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/txtFindAccount" />
    <TextView
        android:text="Please specify your email"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSpecifyEmail"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:text="Email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:textColor="#F85F6A"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>
    <android.support.design.widget.TextInputEditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginStart="-4dp"
        android:id="@+id/inpEmail" />
    <Button
        android:text="Find Account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnFindAccount"
        android:textColor="@android:color/white"
        android:background="@drawable/button_radius"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
</LinearLayout>
