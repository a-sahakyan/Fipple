<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50dp">
    <TextView
        android:text="We just sent you a verification code"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/txtFindAccount" />
    <TextView
        android:text="We just sent a verification code to your email. If you don't see our email in your inbox, check your spam folder"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtSpecifyEmail"
        android:layout_marginBottom="40dp"/>
    <TextView
        android:text="Verification Code"
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtVerificationCode"
        android:textColor="#F85F6A"
        android:fontFamily="sans-serif"
        android:textStyle="bold"/>
    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginStart="-4dp"
        android:id="@+id/inpVerificationCode" />
    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnVerifyFrgPassword"
        android:textColor="@android:color/white"
        android:background="@drawable/button_radius"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
</LinearLayout>
