<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:text="Sign Up"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/txtSignUp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp" />
        <TextView
            android:text="First Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtFirstName"
            android:layout_marginTop="15dp"
            android:textColor="#F85F6A"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/inpFirstName"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:text="Last Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLastname"
            android:textColor="#F85F6A"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/inpLastName"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:text="Phone"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/txtPhone"
            android:textColor="#F85F6A"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/inpPhone"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassword"
            android:textColor="#F85F6A"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/inpPassword"
            android:inputType="textPassword"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:text="Confirm Password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtConfirmPassword"
            android:textColor="#F85F6A"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPassword"
            android:id="@+id/inpConfirmPassword" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <CheckBox
                android:id="@+id/checkBoxTermsAndPrivacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtAgree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="I agree to the"/>
                    <TextView
                        android:id="@+id/txtTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms of Services"
                        android:textColor="#F85F6A"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:paddingLeft="3dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtAnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="and"/>
                    <TextView
                        android:id="@+id/txtPrivacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:textColor="#F85F6A"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:paddingLeft="3dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <Button
            android:text="Continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/button_radius"
            android:id="@+id/btnContinue"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:text="Have an Account?"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="141.5dp"
            android:layout_height="41.5dp"
            android:textColor="#989EB1"
            android:id="@+id/txtHaveAccount"
            android:gravity="right" />
        <Button
            android:text="Sign In"
            android:layout_width="73.5dp"
            android:layout_height="28.5dp"
            android:gravity="left"
            android:paddingLeft="10dp"
            android:background="?android:colorBackground"
            android:textColor="#F85F6A"
            android:textAllCaps="false"
            android:id="@+id/btnSignInFromSignUp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>
</LinearLayout>