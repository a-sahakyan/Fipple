<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">
        <TextView
            android:text="Sign Up"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="25px"
            android:minHeight="25px"
            android:id="@+id/txtSignUp"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="5dp" />
        <TextView
            android:text="First Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtFirstName"
            android:layout_marginTop="15dp"
            android:textColor="#F85F6A"
            android:fontFamily="sans-serif"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/inpFirstName"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:text="Last Name"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtLastname"
            android:textColor="#F85F6A"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/inpLastName"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:text="Email"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/txtEmail"
            android:textColor="#F85F6A"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@id/inpEmail"
            android:layout_marginBottom="25dp"/>
        <TextView
            android:text="Password"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtPassword"
            android:textColor="#F85F6A"
            android:textStyle="bold"/>
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/inpPassword"
            android:inputType="textPassword"/>
        <Button
            android:text="Continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textAllCaps="false"
            android:background="@drawable/button_radius"
            android:id="@+id/btnContinue"
            android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:text="Have an Account?"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="141.5dp"
                android:layout_height="41.5dp"
                android:textColor="#989EB1"
                android:id="@+id/txtHaveAccount"
                android:gravity="right" />
            <Button
                android:text="Sign In"
                android:layout_width="73.5dp"
                android:layout_height="28.5dp"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:background="?android:colorBackground"
                android:textColor="#F85F6A"
                android:textAllCaps="false"
                android:id="@+id/btnSignIn"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
